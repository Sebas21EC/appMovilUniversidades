<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppUtn.Examen.Pages.HomePage"
             Title="HomePage">

        <ContentPage.Resources>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="#007bff"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="Margin" Value="10"/>
            </Style>
        </ContentPage.Resources>

        <VerticalStackLayout>
            <Label x:Name="lblText" Text="Bienvenido"></Label>
        <Label x:Name="lblAutor" Text="Autor: Sebastian Carlosama"></Label>

            <Button x:Name="btnUniversidades" Text="Universidades" Clicked="btnUniversidades_Clicked"></Button>
            <!--<Label Text="o"></Label>-->
            <Button x:Name="btnCarreras" Text="Carreras" Clicked="btnCarreras_Clicked"></Button>
            
        </VerticalStackLayout>


</ContentPage>